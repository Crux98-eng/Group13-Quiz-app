<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="mainbg" stylesheets="@/com/futurebrands/finalbiblequiz/assets/mainStyles.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.futurebrands.finalbiblequiz.controllers.onboardScreen">

   <VBox alignment="CENTER" spacing="20">
      <padding>
         <Insets bottom="30" left="30" right="30" top="30" />
      </padding>

      <!-- Header -->
      <Label fx:id="topText" styleClass="header-label" text="SCRIPTURE SAGE" />

      <!-- Logo -->
      <ImageView fx:id="logoImage" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@/com/futurebrands/finalbiblequiz/assets/images/bible.png" />
         </image>
      </ImageView>

      <!-- Rules Container -->
      <VBox fx:id="rulesContainer" spacing="10" styleClass="rules-container">
         <padding>
            <Insets bottom="15" left="15" right="15" top="15" />
         </padding>

         <Label styleClass="rules-title" text="QUIZ RULES" />

         <!-- Rule Items -->
         <HBox alignment="CENTER_LEFT" spacing="10">
            <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
               <image>
                  <Image url="@/com/futurebrands/finalbiblequiz/assets/images/timer-icon.png" />
               </image>
            </ImageView>
            <Label styleClass="rule-label" text="30 seconds to answer each question" />
         </HBox>

         <HBox alignment="CENTER_LEFT" spacing="10">
            <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
               <image>
                  <Image url="@/com/futurebrands/finalbiblequiz/assets/images/random-icon.png" />
               </image>
            </ImageView>
            <Label styleClass="rule-label" text="15 random Bible questions" />
         </HBox>

         <HBox alignment="CENTER_LEFT" spacing="10">
            <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
               <image>
                  <Image url="@/com/futurebrands/finalbiblequiz/assets/images/result-icon.png" />
               </image>
            </ImageView>
            <Label styleClass="rule-label" text="Instant feedback on your answers" />
         </HBox>

         <HBox alignment="CENTER_LEFT" spacing="10">
            <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
               <image>
                  <Image url="@/com/futurebrands/finalbiblequiz/assets/images/end-icon.png" />
               </image>
            </ImageView>
            <Label styleClass="rule-label" text="Quiz ends if time runs out" />
         </HBox>
      </VBox>

      <!-- Spacer -->
      <Region VBox.vgrow="ALWAYS" />

      <!-- Start Button -->
      <Button fx:id="btn1" maxWidth="300" onAction="#quizScreen" styleClass="start-button" text="START QUIZ" />

   </VBox>
</StackPane>
